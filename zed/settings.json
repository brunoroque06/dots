{
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "buffer_line_height": "standard",
  "cursor_blink": false,
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Rust": {
      "formatter": {
        "external": {
          "arguments": ["-"],
          "command": "~/.cargo/bin/rustfmt"
        }
      }
    }
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto"
  },
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "shell": {
      "program": "/opt/homebrew/bin/elvish"
    }
  },
  "theme": "One Light",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "vim_mode": true
}
