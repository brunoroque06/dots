[credential]
helper = osxkeychain

[core]
autocrlf = input
excludesfile = ~/.config/git/ignore
pager = less -R

[diff]
algorithm = histogram
external = difft
tool = code

[difftool "code"]
cmd = code --wait --diff $LOCAL $REMOTE

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
process = git-lfs filter-process
smudge = git-lfs smudge -- %f

[init]
defaultBranch = main

[merge]
conflictstyle = zdiff3
tool = code

[mergetool "code"]
cmd = code --wait $MERGED
keepBackup = false

[pull]
rebase = false

